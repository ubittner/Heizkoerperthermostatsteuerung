        },
        {
          "type": "NumberSpinner",
          "name": "PreHeatingTemperature",
          "caption": "Vorwärmmodus",
          "digits": 1,
          "suffix": "°C"
        },
        {
          "type": "Label",
          "caption": "\nBitte geben Sie die Temperatur in °C für den Heizmodus an:"
        },
        {
          "type": "NumberSpinner",
          "name": "HeatingTemperature",
          "caption": "Heizmodus",
          "digits": 1,
          "suffix": "°C"
        },
        {
          "type": "Label",
          "caption": "\nBitte geben Sie die Temperatur in °C für den Boostmodus an:"
        },
        {
          "type": "NumberSpinner",
          "name": "BoostTemperature",
          "caption": "Boostmodus",
          "digits": 1,
          "suffix": "°C"
        },
        {
          "type": "Label",
          "caption": "\nBitte geben Sie die Dauer in Sekunden für den Boostmodus an:"
        },
        {
          "type": "NumberSpinner",
          "name": "BoostDuration",
          "caption": "Dauer",
          "suffix": "s"
        }
