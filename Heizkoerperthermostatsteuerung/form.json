        },
        {
          "type": "List",
          "name": "DoorWindowSensors",
          "caption": "Tür- und Fenstersensoren",
          "rowCount": 5,
          "add": true,
          "delete": true,
          "sort": {
            "column": "ID",
            "direction": "ascending"
          },
          "columns": [
            {
              "name": "UseSensor",
              "caption": "Aktiviert",
              "width": "100px",
              "add": true,
              "edit": {
                "type": "CheckBox"
              }
            },
            {
              "name": "ID",
              "caption": "Variable",
              "width": "450px",
              "add": 0,
              "edit": {
                "type": "SelectVariable"
              }
            }
          ]
        },
        {
          "type": "Label",
          "caption": "\nBitte geben Sie den Zeitraum in Sekunden (0 = deaktiviert) für eine erneute Überprüfung an:"
        },
        {
          "type": "NumberSpinner",
          "name": "ReviewDelay",
          "caption": "Erneute Überprüfung",
          "suffix": "s"
        },
        {
          "type": "Label",
          "caption": "\nBitte wählen Sie aus, ob bei geöffnetem Tür- / Fensterstatus die Temperatur abgesenkt werden soll:"
        },
        {
          "type": "CheckBox",
          "name": "UseReduceTemperature",
          "caption": "Temperatur absenken"
        },
        {
          "type": "Label",
          "caption": "\nBitte geben Sie die Absenktemperatur in °C an:"
        },
        {
          "type": "NumberSpinner",
          "name": "OpenDoorWindowTemperature",
          "caption": "Absenktemperatur",
          "digits": 1,
          "suffix": "°C"
        },
        {
          "type": "Label",
          "caption": "\nBitte wählen Sie aus, ob bei wieder geschlossenem Tür- / Fensterstatus der Boost-Modus verwendet werden soll:"
        },
        {
          "type": "CheckBox",
          "name": "UseBoostMode",
          "caption": "Boost-Modus verwenden"
        }
